<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.android.test.myviewmode.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jidouauto.ui.oushang.sideBar.JSideBar
            android:id="@+id/menu_side"
            android:layout_width="320pt"
            android:layout_height="match_parent"
            app:backRes="@mipmap/ic_cancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:menuIconsRes="@array/sideBarRes"
            app:menuPressedIconsRes="@array/sidePressBarRes"
            app:menuTextsRes="@array/sideBarTxt"
            app:titleRes="@string/side_title" />

        <fragment
            android:id="@+id/main_fragment_content"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintLeft_toRightOf="@id/menu_side"
            app:layout_constraintRight_toRightOf="parent"
            app:navGraph="@navigation/nav_main_content"
            tools:layout="@layout/fragment_main_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>